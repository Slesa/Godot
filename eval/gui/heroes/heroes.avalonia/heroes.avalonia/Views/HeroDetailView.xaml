<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:heroes.avalonia.ViewModels;assembly=heroes.avalonia">

  <Design.DataContext>
    <vm:HeroDetailDesignModel />
  </Design.DataContext>


  <StackPanel>
    <StackPanel Orientation="Horizontal">
      <TextBlock Text="{Binding Hero.Name, Mode=OneWay}" />
      <TextBlock Text=" Details" />
    </StackPanel>
    <TextBlock Text="Name:" />
    <TextBox Text="{Binding HeroName}" />
    <StackPanel Orientation="Horizontal">
      <Button Command="{Binding SaveCommand}" Content="Save" />
      <Button Command="{Binding GoBackCommand}" Content="Go back" />
    </StackPanel>
  </StackPanel>

</UserControl>